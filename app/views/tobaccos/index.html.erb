<p id="notice"><%= notice %></p>

<h3><%= @account.name %></h3>
<h3>保有タバコ</h3>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>銘柄</th>
        <th>金額</th>
        <th>ニコチン</th>
        <th>タール</th>
        <th colspan="1"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @account.tobaccos.each do |tobacco| %>
        <tr>
          <td><%= tobacco.brand.name %></td>
          <td><%= tobacco.brand.price %></td>
          <td><%= tobacco.brand.nicotin %></td>
          <td><%= tobacco.brand.tar %></td>
          <td><%= button_to 'Delete', tobacco_path(tobacco), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h3>選択可能な銘柄</h3>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>銘柄</th>
        <th>金額</th>
        <th>ニコチン</th>
        <th>タール</th>
        <th colspan="1"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @brands.each do |brand| %>
        <tr>
          <td><%= brand.name %></td>
          <td><%= brand.price %></td>
          <td><%= brand.nicotin %></td>
          <td><%= brand.tar %></td>
          <td><%= button_to 'Add', account_tobaccos_path(@account, tobacco: {brand_id: brand.id}), method: :post, class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'Back', accounts_path %>
